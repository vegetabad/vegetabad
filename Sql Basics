FROM EmployeeDemographics
Left outer Join EmployeeSalary
ON EmployeeDemographics.EmployeeID = EmployeeSalary.EmployeeID 

SELECT DISTINCT EmployeeSalary.EmployeeID, FirstName, LastName, JobTitle,Salary
