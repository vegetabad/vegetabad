/*CREATING THE TABLE THROUGH QUERY , create 2 tables */

Create Table StudentData
(RollNo int,
FisrtName varchar(50),
MiddleName varchar(50),
LastName varchar(50),
Age int,
Marksobtained int,
totalmarks int)

